# Production Environment Variables - Пример файла
SECRET_KEY=your-super-secret-production-key-change-this-to-50-characters-long
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,your-domain.com
DOCKER_ENV=true

# Database settings
DB_NAME=diplom_db
DB_USER=diplom_user
DB_PASSWORD=secure_database_password_here
DB_HOST=db
DB_PORT=5432

# Email settings (настройте свой SMTP)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password

# Celery settings
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

GOOGLE_OAUTH2_KEY=ваш-google-client-id
GOOGLE_OAUTH2_SECRET=ваш-google-client-secret
GITHUB_KEY=ваш-github-client-id
GITHUB_SECRET=ваш-github-client-secret
